{
  "name": "@mutuals/contracts",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "hardhat node",
    "build": "hardhat compile",
    "build:clean": "cross-env bun clean && bun build",
    "clean": "cross-env hardhat clean && rimraf .deps cache",
    "test": "cross-env SOLC_PROFILE=test && hardhat test",
    "test:clean": "cross-env bun clean && bun test",
    "typechain": "hardhat typechain",
    "deploy:local": "hardhat deploy --network localhost",
    "deploy:staging": "cross-env SOLC_PROFILE=production hardhat deploy --network holesky",
    "deploy:production": "hardhat deploy --network mainnet",
    "task:accounts": "hardhat accounts",
    "lint": "cross-env bun lint:solhint && bun lint:eslint",
    "lint:solhint": "solhint --config .solhint.json --ignore-path .solhintignore contracts/**/*.sol",
    "lint:eslint": "eslint . --max-warnings 0  --ext js,ts",
    "lint:fix": "cross-env bun lint:eslint:fix && bun lint:solhint:fix",
    "lint:solhint:fix": "bun lint:solhint -- --fix",
    "lint:eslint:fix": "eslint --fix .  --ext js,ts",
    "format": "prettier --check **.{sol,js,ts}",
    "format:fix": "prettier --write **.{sol,js,ts}"
  },
  "devDependencies": {
    "@mutuals/eslint-config": "workspace:*",
    "@mutuals/typescript-config": "workspace:*",
    "@nomicfoundation/ethereumjs-util": "^9.0.4",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-verify": "^3.0.8",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@openzeppelin/merkle-tree": "^1.0.8",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/dotenv-defaults": "^5.0.0",
    "@types/dotenv-parse-variables": "^2.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "chai": "^6.2.2",
    "cross-env": "^10.1.0",
    "defender-admin-client": "1.38.3-rc.0",
    "dotenv": "^17.2.3",
    "dotenv-defaults": "^5.0.2",
    "dotenv-parse-variables": "^2.0.0",
    "eslint": "9.39.2",
    "ethers": "^6.16.0",
    "fs-extra": "^11.3.3",
    "hardhat": "^3.1.1",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-deploy": "^1.0.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^2.3.0",
    "hardhat-ignore-warnings": "^0.2.12",
    "hardhat-tracer": "^3.4.0",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "prettier-plugin-solidity": "^2.2.1",
    "rimraf": "^6.1.2",
    "solhint": "^6.0.2",
    "solhint-plugin-prettier": "^0.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  }
}
